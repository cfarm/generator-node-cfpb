{
  "name": "<%= slugname %>",
  "version": "0.1.0",
  "main": "index.js",
  "description": "<%= props.description %>",
  "homepage": "<%= repoUrl %>",
  "bugs": "<%= repoUrl %>/issues",
  "author": {
    "name": "Consumer Financial Protection Bureau",
    "url": "http://consumerfinance.gov"
  },
  "repository": {
    "type": "git",
    "url": "<%= repoUrl %>"
  },
  "license": "Public Domain",
  "keywords": [
    "<%= slugname %>"<% for (var i=0;i<keywords.length;i++) { %>,
    "<%= keywords[i] %>"<% } %>
  ],
  "devDependencies": {
    "nodeunit": "~0.8.6"<% if (props.browser === "yes") { %>,
    "browserify": "^4.1.3"<% } %>
  },
  "scripts": {
    "test": "nodeunit test/<%= slugname %>-tests.js"<% if (props.browser === "yes") { %>,
    "browser": "mkdir -p dist && browserify index.js -s <%= slugname %> -o dist/<%= slugname %>.js"<%}%>
  }
}
